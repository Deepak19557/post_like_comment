<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Post_Name</th>
            <th>Post_Image</th>
            <th>Post like</th>
            <th>Post Comment</th>
        </tr>
    </thead>
    <tbody>
        <% @posts.each do |post| %>
            <tr class="red">
                <td><%= post.post_name %></td>
                <td>
                  <% post.images.each do |post_image|%>
                    <%= image_tag post_image, class:"post_image" %>
                  <%end%>
                  <% lik = current_user.likes.find_by(likeable: post) %>
                  <% if lik.present? %>
                    <p><%= button_to 'unlike', post_like_delete_path(post) %></p>
                  <% else %>
                    <p><%= button_to 'like', post_like_path(post) %></p>
                  <% end %>
                </td>
                <td><%= link_to 'add comments' , new_comment_path(post) %></td>
                <td>
                  <% post.comments.each do |comment| %>
                    <ul><li><%= comment.comment_name %></li></ul>
                    <% lik = current_user.likes.find_by(likeable: comment) %>
                    <% if lik.present? %>
                      <p><%= button_to 'unlike', comment_like_delete_path(comment) %></p>
                    <% else %>
                      <p><%= button_to 'like', comment_like_path(comment) %></p>
                    <%end%>
                  <%end%>
                </td>
            </tr>
        <% end%>
    </tbody>
</table>
<div class="">
  <h3> <%= link_to 'back to home', root_path %> </h3>
  <h4><%= link_to 'create post', posts_new_path %></h4>
</div>

<style media="screen">
  table, th, td {
  border: 3px solid black;
  border-collapse: collapse;
}

.post_image{
  width: 100px;
  height: 100px;
}
</style>
